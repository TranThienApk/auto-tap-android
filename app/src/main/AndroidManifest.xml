<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Android 13+: hiển thị thông báo của foreground service (nếu dùng) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Quyền vẽ overlay (xin qua Settings, không phải runtime) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Testapp">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- (tuỳ chọn) foreground service giữ app sống -->
        <service
            android:name=".service.KeepAliveService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection|dataSync" />

        <!-- AccessibilityService (để sau này tap/swipe tự động) -->
        <service
            android:name=".service.AutoAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config" />
        </service>

        <!-- (tuỳ chọn) overlay panel -->
        <service
            android:name=".service.OverlayService"
            android:exported="false" />
    </application>
</manifest>
