<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Foreground service + MediaProjection -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />

    <!-- Thêm mới: quyền vẽ overlay & hiển thị thông báo (Android 13+) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Testapp">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Service chụp màn hình -->
        <service
            android:name=".service.MediaProjectionService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

        <!-- Giữ tiến trình (nếu dùng) -->
        <service
            android:name=".service.KeepAliveService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection|dataSync" />

        <!-- Accessibility để tự tap -->
        <service
            android:name=".service.AutoAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config" />
        </service>

        <!-- Overlay nổi -->
        <service
            android:name=".service.OverlayService"
            android:exported="false" />

    </application>
</manifest>
