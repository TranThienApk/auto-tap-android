<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnOverlay"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Bật cửa sổ nổi" />

    <Button
        android:id="@+id/btnAskProjection"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Xin quyền ghi màn hình" android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnOpenAccessibility"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Bật Trợ năng (Auto click)" android:layout_marginTop="12dp"/>

    <ToggleButton
        android:id="@+id/tgAutoHp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textOn="Auto HP: ON" android:textOff="Auto HP: OFF"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Status: idle"
        android:layout_marginTop="12dp"/>
</LinearLayout>
